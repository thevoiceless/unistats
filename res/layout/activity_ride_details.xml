<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rideDetailScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

	<LinearLayout
        android:id="@+id/rideDetailLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <EditText
            android:id="@+id/enterRideName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_ride_name"
            android:inputType="textCapSentences"
            android:paddingLeft="10dp" />

        <LinearLayout
            android:id="@+id/rideDateRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/enterRideMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/hint_ride_month"
                android:imeOptions="actionNext"
                android:inputType="number" />

            <EditText
                android:id="@+id/enterRideDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/hint_ride_day"
                android:imeOptions="actionNext"
                android:inputType="number" />

            <EditText
                android:id="@+id/enterRideYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/hint_ride_year"
                android:inputType="number" />

        </LinearLayout>
        
        <Button
            android:id="@+id/buttonSetRideDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_date" />

        <CheckBox
            android:id="@+id/checkboxRideDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/record_distance" />

        <CheckBox
            android:id="@+id/checkboxRideGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
			android:checked="false"
			android:focusable="false"
			android:enabled="false"
            android:clickable="false"
            android:text="@string/use_GPS" />

        <CheckBox
            android:id="@+id/checkboxRidePedalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/record_pedal_count" />

        <Button
            android:id="@+id/buttonCreateAchievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_set_goal" />
         
       <Button
            android:id="@+id/buttonSaveRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_save_ride" />

       <Button
            android:id="@+id/buttonSaveAndStartRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_save_start_ride" />
    </LinearLayout>

</ScrollView>